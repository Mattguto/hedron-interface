<style>
  .hedron-container { padding: 10px; display: flex; flex-direction: column; gap: 12px; }
  .slot {
    border: 2px dashed var(--color-border-light-tertiary);
    border-radius: 6px;
    padding: 8px;
    text-align: center;
    font-size: 13px;
    min-height: 40px;
  }
  .stone { display: flex; justify-content: space-between; align-items: center; padding: 4px 6px; border: 1px solid var(--color-border-light-tertiary); border-radius: 4px; }
  .remove { cursor: pointer; color: var(--color-text-dark-secondary); }
  .remove:hover { color: red; }
</style>

<div class="hedron-container">
  <h3>Hedron Interface</h3>

  <div>
    <label><strong>Core Ember</strong></label>
    {{#if slots.core}}
      <div class="stone" data-uuid="{{slots.core.uuid}}">
        {{slots.core.name}}
        <a class="remove">✕</a>
      </div>
    {{else}}
      <div class="slot" data-slot="core">Arraste um Core Ember Stone</div>
    {{/if}}
  </div>

  <div>
    <label><strong>Ember Fragments</strong></label>
    {{#each slots.fragments as |frag i|}}
      {{#if frag}}
        <div class="stone" data-uuid="{{frag.uuid}}">
          {{frag.name}}
          <a class="remove">✕</a>
        </div>
      {{else}}
        <div class="slot" data-slot="fragment-{{i}}">Arraste um Ember Fragment</div>
      {{/if}}
    {{/each}}
  </div>
</div>
