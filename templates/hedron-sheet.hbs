<style>
  .hedron-container { padding: 10px; display: flex; flex-direction: column; gap: 12px; }
  .slot {
    border: 2px dashed var(--color-border-light-tertiary);
    border-radius: 6px;
    padding: 10px;
    text-align: center;
    font-size: 13px;
    min-height: 44px;
  }
  .stone {
    display:flex; justify-content:space-between; align-items:center; gap:8px;
    padding:6px 8px; border:1px solid var(--color-border-light-tertiary); border-radius:6px;
  }
  .stone .left { display:flex; align-items:center; gap:8px; }
  .stone .icon {
    width: 24px; height: 24px; border-radius: 4px; object-fit: cover;
    border: 1px solid var(--color-border-light-tertiary);
  }
  .open-doc { all: unset; cursor: pointer; display:flex; align-items:center; gap:8px; }
  .open-doc:hover { text-decoration: underline; }
  .remove { cursor:pointer; opacity:.85; }
  .remove:hover { opacity:1; color: red; }
  h3 { margin: 0 0 6px 0; }
  label { display:block; margin-bottom: 4px; }
</style>

<div class="hedron-container">
  <h3>Hedron Interface</h3>

  <div>
    <label><strong>Core Ember</strong></label>
    {{#if slots.core}}
      <div class="stone" data-uuid="{{slots.core.uuid}}">
        <div class="left">
          <button type="button" class="open-doc" data-uuid="{{slots.core.uuid}}" title="Abrir {{slots.core.name}}">
            <img class="icon" src="{{slots.core.img}}" alt="" />
            <span>{{slots.core.name}}</span>
          </button>
        </div>
        <a class="remove" title="Remover">✕</a>
      </div>
    {{else}}
      <div class="slot" data-slot="core">Arraste um <em>Core Ember Stone</em> aqui</div>
    {{/if}}
  </div>

  <div>
    <label><strong>Ember Fragments</strong></label>
    {{#each slots.fragments as |frag i|}}
      {{#if frag}}
        <div class="stone" data-uuid="{{frag.uuid}}">
          <div class="left">
            <button type="button" class="open-doc" data-uuid="{{frag.uuid}}" title="Abrir {{frag.name}}">
              <img class="icon" src="{{frag.img}}" alt="" />
              <span>{{frag.name}}</span>
            </button>
          </div>
          <a class="remove" title="Remover">✕</a>
        </div>
      {{else}}
        <div class="slot" data-slot="fragment-{{i}}">Arraste um <em>Ember Fragment</em> aqui</div>
      {{/if}}
    {{/each}}
  </div>
</div>
